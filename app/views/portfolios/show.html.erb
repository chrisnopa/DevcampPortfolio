<div class="container portfolio-show-page">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image,width:'100%', class:"img-thumbnail" unless @portfolio_item.main_image.nil?%>
    </div>
    <div class="col-md-5 item-style">
      <h2><%= @portfolio_item.title %></h2>
      <em><%= @portfolio_item.subtitle %></em>
      <hr>
      <p class="item-description"><%= @portfolio_item.body %></p>
      <h4>Technologies used:</h4>
      <%@portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
    <% if logged_in?(:site_admin) %>
    <div class="portfolio-buttons">
      <span>
        <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class:'btn-medium'%>
      </span>
      <span>
        <%= link_to "View all portfolio items", portfolios_path, class:'btn-medium' %>
      </span>
    <% end %>
    </div>
  </div>
</div>
