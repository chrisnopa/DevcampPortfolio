<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
    <% end %>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_area :subtitle, class:"form-control" %>
        </div>
        <div class="form-group">
          <label class="btn btn-primary btn-block">
            Upload a main image file
            <%= form.file_field :main_image, direct_upload: true%>
          </label>
        </div>
        <div class="form-group">
          <label class="btn btn-primary btn-block">
            Upload a thumb image file
            <%= form.file_field :thumb_image, direct_upload: true%>
          </label>
        </div>
        <div class="form-group"></div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class:"form-control", rows:10 %>
        </div>
      </div>
      <hr>
      <div class="col-md-12">
        <h2>Technologies used :</h2>
        <%= form.fields_for :technologies do |technology_form|%>
          <%= render 'technology_fields', f: technology_form %>
        <%end%>
        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
        <div class="form-group portfolio-creation">
          <%= form.submit 'Save Portfolio Item', class: "btn btn-block btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
